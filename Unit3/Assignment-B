// Program to calculate the cost of a meal, including tax, tip, and cost per person

const mealCost: number = 315.99; // Cost of the meal
const hstRate: number = 0.13; // HST rate (13%)
const tipRate: number = 0.15; // Tip rate (15%)
const numberOfPeople: number = 5; // Number of people splitting the bill

// Calculate tax, tip, and total cost
const taxAmount: number = mealCost * hstRate;
const tipAmount: number = mealCost * tipRate;
const totalCost: number = mealCost + taxAmount + tipAmount;
const costPerPerson: number = totalCost / numberOfPeople;

// Display the results
console.log(`Subtotal (meal cost): $${mealCost.toFixed(2)}`);
console.log(`Tax amount (HST 13%): $${taxAmount.toFixed(2)}`);
console.log(`Tip amount (15%): $${tipAmount.toFixed(2)}`);
console.log(`Total cost: $${totalCost.toFixed(2)}`);
console.log(`Total cost per person (split among ${numberOfPeople} people): $${costPerPerson.toFixed(2)}`);